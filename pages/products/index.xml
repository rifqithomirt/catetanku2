<div class="row">
    <div class="col-12">
        <div class="card">
            <table class="datatables-basic table">
                <thead>
                    <tr>
                        <th>Kode Barang</th>
                        <th>Nama Barang</th>
                        <th>Kategori</th>
                        <th>Berat</th>
                        <th>Kadar</th>
                        <th>Harga</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal Add -->
<div class="modal fade" id="modals-new-record" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Add Product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form form-horizontal">
                    <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="nama_barang">Nama Barang</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" id="nama_barang" class="form-control" placeholder="Kalung Merah" />
                        </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="kategori">Kategori</label>
                        </div>
                        <div class="col-sm-9">
                            <select class="form-control" id="kategori">
                                <option disabled="disabled" selected>Select Category</option>
                                <option value="Kalung">Kalung</option>
                                <option value="Gelang">Gelang</option>
                                <option value="Cincin">Cincin</option>
                                <option value="Lain-lain">Lain-lain</option>
                            </select>
                        </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="kode_barang">Kode Barang</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" id="kode_barang" class="form-control" placeholder="100001" />
                        </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="berat">Berat</label>
                        </div>
                        <div class="col-sm-7 ">
                            <input type="number" id="berat" class="form-control text-right" placeholder="0" />
                        </div>
                        <div class="col-sm-2 pl-0">
                            <input type="text" id="unit" class="form-control" value="gr" disabled="disabled" />
                        </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="kadar">Kadar</label>
                        </div>
                        <div class="col-sm-9 ">
                            <input type="number" id="kadar" class="form-control text-right" placeholder="0" />
                        </div>
                        </div>
                    </div>
                    
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="harga">Harga</label>
                        </div>
                        <div class="col-sm-2 pr-0">
                            <input type="text" id="unit" class="form-control" value="Rp." disabled="disabled" />
                        </div>
                        <div class="col-sm-7 ">
                            <input type="number" id="harga" class="form-control text-right" placeholder="0" />
                        </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            <label for="status">Status</label>
                        </div>
                        <div class="col-sm-9">
                            <input type="text" id="status" class="form-control" value="active" disabled="disabled" />
                        </div>
                        </div>
                    </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" id="addSubmit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>

